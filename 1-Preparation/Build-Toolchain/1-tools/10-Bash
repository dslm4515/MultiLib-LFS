# Tools: Bash
# Build & install as LFS

# Set build options
export  CARGS="--prefix=/tools "
export CARGS+="--host=$LFS_TGT "
export CARGS+="--build=$(sh support/config.guess) "
export CARGS+="--without-bash-malloc "

# Prepare for compilation:
./configure $CARGS

# Compile the package: 
make

# Install the package:
make install
